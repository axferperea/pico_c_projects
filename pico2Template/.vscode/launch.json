{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Pico Debug (Cortex-Debug)",
            "cwd": "/.pico-sdk/openocd/0.12.0+dev/scripts",
            "executable": "",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "serverpath": "/.pico-sdk/openocd/0.12.0+dev/openocd.exe",
            "gdbPath": "",
            "device": "",
            "configFiles": [
                "interface/cmsis-dap.cfg",
                "target/.cfg"
            ],
            "svdFile": "/.pico-sdk/sdk/2.0.0/src//hardware_regs/.svd",
            "runToEntryPoint": "main",
            // Fix for no_flash binaries, where monitor reset halt doesn't do what is expected
            // Also works fine for flash binaries
            "overrideLaunchCommands": [
                "monitor reset init",
                "load \"\""
            ],
            "openOCDLaunchCommands": [
                "adapter speed 5000"
            ]
        },
        {
            "name": "Pico Debug (Cortex-Debug with external OpenOCD)",
            "cwd": "",
            "executable": "",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "external",
            "gdbTarget": "localhost:3333",
            "gdbPath": "",
            "device": "",
            "svdFile": "/.pico-sdk/sdk/2.0.0/src//hardware_regs/.svd",
            "runToEntryPoint": "main",
            // Give restart the same functionality as runToEntryPoint - main
            "postRestartCommands": [
                "break main",
                "continue"
            ]
        },
        {
            "name": "Pico Debug (C++ Debugger)",
            "type": "cppdbg",
            "request": "launch",
            "cwd": "",
            "program": "",
            "MIMode": "gdb",
            "miDebuggerPath": "",
            "miDebuggerServerAddress": "localhost:3333",
            "debugServerPath": "/.pico-sdk/openocd/0.12.0+dev/openocd.exe",
            "debugServerArgs": "-f interface/cmsis-dap.cfg -f target/.cfg -c \"adapter speed 5000\"",
            "serverStarted": "Listening on port .* for gdb connections",
            "filterStderr": true,
            "hardwareBreakpoints": {
                "require": true,
                "limit": 4
            },
            "preLaunchTask": "Flash",
            "svdPath": "/.pico-sdk/sdk/2.0.0/src//hardware_regs/.svd"
        },
    ]
}
